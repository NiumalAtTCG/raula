<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_bg"
    tools:context=".VerificationActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/verification_screen_text1"
        android:textColor="@color/matiria_C_lignt"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/verification_screen_text2"
        android:textColor="@color/matiria_C_Mid_Greeen"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <!-- 6 Digit Input Fields with Border -->

    <LinearLayout
        android:id="@+id/digitsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <EditText
            android:id="@+id/digit1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/verification_border"
            android:cursorVisible="false"
            android:fontFamily="@font/lexend_bold"
            android:hint="•"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusForward="@id/digit2"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/matiria_C_lignt"
            android:textSize="24sp"
            app:layout_constraintWidth_percent="0.15" />

        <EditText
            android:id="@+id/digit2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/verification_border"
            android:cursorVisible="false"
            android:fontFamily="@font/lexend_bold"
            android:hint="•"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusForward="@id/digit3"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/matiria_C_lignt"
            android:textSize="24sp"
            app:layout_constraintWidth_percent="0.15" />

        <EditText
            android:id="@+id/digit3"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/verification_border"
            android:cursorVisible="false"
            android:fontFamily="@font/lexend_bold"
            android:hint="•"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusForward="@id/digit4"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/matiria_C_lignt"
            android:textSize="24sp"
            app:layout_constraintWidth_percent="0.15" />

        <EditText
            android:id="@+id/digit4"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/verification_border"
            android:cursorVisible="false"
            android:fontFamily="@font/lexend_bold"
            android:hint="•"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusForward="@id/digit5"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/matiria_C_lignt"
            android:textSize="24sp"
            app:layout_constraintWidth_percent="0.15" />

        <EditText
            android:id="@+id/digit5"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/verification_border"
            android:cursorVisible="false"
            android:fontFamily="@font/lexend_bold"
            android:hint="•"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusForward="@id/digit6"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/matiria_C_lignt"
            android:textSize="24sp"
            app:layout_constraintWidth_percent="0.15" />

        <EditText
            android:id="@+id/digit6"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/verification_border"
            android:cursorVisible="false"
            android:fontFamily="@font/lexend_bold"
            android:hint="•"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/matiria_C_lignt"
            android:textSize="24sp"
            app:layout_constraintWidth_percent="0.15" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_profile_button"
        android:layout_width="126dp"
        android:layout_height="130dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="38dp"
        android:fontFamily="@font/lexend_bold"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/matiria_C_lignt"
        app:backgroundTint="@color/matiria_C_Mid"
        app:icon="@drawable/next_page"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/matiria_C_lignt"
        app:iconSize="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digitsContainer"
        app:layout_constraintVertical_bias="0.399"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
