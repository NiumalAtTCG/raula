<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.cardview.widget.CardView
    android:id="@+id/package1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="MissingConstraints">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/matiria_card_bg"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iconHaircut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/package_icon"
        app:tint="@color/matiria_C_text" />

    <TextView
        android:id="@+id/textPackage1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/matiria_C_text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/iconHaircut"
        app:layout_constraintTop_toTopOf="@id/iconHaircut"
        app:layout_constraintEnd_toStartOf="@id/btnBookPackage1"/>

    <TextView
        android:id="@+id/descPackage1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/matiria_C_text"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/textPackage1"
        app:layout_constraintTop_toBottomOf="@id/textPackage1"
        app:layout_constraintEnd_toEndOf="@id/textPackage1" />

    <TextView
        android:id="@+id/pricePackage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="$20"
        android:textColor="@color/matiria_C_Mid_Greeen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textPackage1"
        app:layout_constraintTop_toBottomOf="@id/descPackage1" />

    <Button
        android:id="@+id/btnBookPackage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/matiria_C_Secondry_Btn"
        android:text="Add Now"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>